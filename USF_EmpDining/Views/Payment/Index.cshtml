@model IEnumerable<EmpApp.Models.PaymentViewModel>


 <div class="panel-body">  
        <div class="btn-group">  
            <a asp-action="Create"  class="btn btn-primary">  
                <i class="glyphicon glyphicon-plus"></i>  Payments
            </a>  
        </div>  

<br/> <br/>


 <table class="table table-bordered table-striped table-condensed">  
            <thead>  
                <tr>
                    <th>Employee Name</th>
                    <th>Payment Date</th>
                    <th>Hours Worked</th>
                    <th>Hourly Wage</th>
                    <th>Salary</th>
                    <th>Payment Type</th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ReturnPaymentDateForDisplay)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoursWorked)</td>
                    <td>@Html.DisplayFor(modelItem => item.HourlyWage)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salary)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaymentType)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PaymentId" class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-danger" onclick="return confirm('Are you sure you wish to delete ?');">
                            <i class="glyphicon glyphicon-trash"></i>  Delete
                        </a>
                    </td>
                </tr>  
                }  
            </tbody>  
        </table>  