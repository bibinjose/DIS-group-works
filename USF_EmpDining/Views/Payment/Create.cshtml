@model EmpApp.Models.PaymentViewModel
@{
    IEnumerable <String> employees = ViewData["Employee"] as IEnumerable<String>;
}
<br /><br />
<form asp-action="Create" method="Post">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="EmployeeName" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <select class="form-control" asp-for="EmployeeName"
                        asp-items="@(new SelectList(employees))">
                    <option>--Select employee--</option>
                </select>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentDate" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input type="date" asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HoursWorked" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input asp-for="HoursWorked" class="form-control" value=0.0 />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HourlyWage" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input asp-for="HourlyWage" class="form-control" value=0.0 />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Salary" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input asp-for="Salary" class="form-control" value=0.0 />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentType" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input asp-for="PaymentType" class="form-control" value="Bi Weekly" />
            </div>
        </div>
    </div>
    </div>


    <input type="submit" value="Save" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br />

</form>