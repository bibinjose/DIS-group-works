@model EmpApp.Models.Payment

<br/><br/>
<form asp-action="Edit" method="Post">
     <div class="form-horizontal">
         <div class="row">
             <div class="hidden">
                 <label asp-for="PaymentId" class="col-lg-2 col-sm-3 control-label"></label>
                 <div class="col-lg-3">
                     <input asp-for="PaymentId" class="form-control" />
                     <span asp-validation-for="PaymentId" class="text-danger"></span>
                 </div>
             </div>
             <div class="form-group">
                 <label asp-for="PaymentDate" class="col-lg-2 col-sm-3 control-label"></label>
                 <div class="col-lg-3">
                     <input asp-for="PaymentDate" class="form-control" />
                     <span asp-validation-for="PaymentDate" class="text-danger"></span>
                 </div>

                 <div class="form-group">
                     <label asp-for="HoursWorked" class="col-lg-2 col-sm-3 control-label"></label>
                     <div class="col-lg-3">
                         <input asp-for="HoursWorked" class="form-control" />
                     </div>


                     <div class="form-group">
                         <label asp-for="HourlyWage" class="col-lg-2 col-sm-3 control-label"></label>
                         <div class="col-lg-3">
                             <input asp-for="HourlyWage" class="form-control" />
                         </div>


                         <div class="form-group">
                             <label asp-for="Salary" class="col-lg-2 col-sm-3 control-label"></label>
                             <div class="col-lg-3">
                                 <input asp-for="Salary" class="form-control" />
                             </div>

                             <div class="form-group">
                                 <label asp-for="PaymentType" class="col-lg-2 col-sm-3 control-label"></label>
                                 <div class="col-lg-3">
                                     <input asp-for="PaymentType" class="form-control" />
                                 </div>
                             </div>
                         </div>
                     </div>
        <input type="submit" value="Update" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br/>

</form>