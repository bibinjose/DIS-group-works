@model EmpApp.Models.ScheduleViewModel
@{
    IEnumerable <String> employees = ViewData["Employee"] as IEnumerable<String>;
}
<br /><br />
<form asp-action="Create" method="Post">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="EmployeeName" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <select class="form-control" asp-for="EmployeeName"
                        asp-items="@(new SelectList(employees))">
                    <option>--Select employee--</option>
                </select>
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ScheduleDate" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input type="date" asp-for="ScheduleDate" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndTime" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input type="time" asp-for="EndTime" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartTime" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input type="time" asp-for="StartTime" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WorkLocation" class="col-lg-2 col-sm-3 control-label"></label>
            <div class="col-lg-3">
                <input asp-for="WorkLocation" class="form-control" value="Marshall Student Center" />
            </div>
        </div>
    </div>
    </div>


    <input type="submit" value="Save" class="col-lg-2 col-md-offset-2 btn btn-success" /> <br />

</form>